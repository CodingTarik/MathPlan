{
  "dependencies": {
    "axios": "^1.6.2",
    "bootstrap": "^5.3.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "eslint-plugin-etc": "^2.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.7.1",
    "jsdoc": "^4.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.3",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "sequelize": "^6.35.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-ejs": "^0.0.18",
    "standard": "^17.1.0",
    "supertest": "^6.3.3",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "jsdocs": "jsdoc -c jsdoc.json",
    "clean": "rimraf ./client/build",
    "build": "npm run clean && npm run build:intern && npm run build:student && npm run copyIntern && npm run copyStudent",
    "build:intern": "cd client/intern && npm install && npm run build",
    "build:student": "cd client/student && npm install && npm run build",
    "copyIntern": "node -e \"require('fs').cpSync('./client/intern/dist', './client/build/intern', {recursive: true});\"",
    "copyStudent": "node -e \"require('fs').cpSync('./client/student/dist', './client/build/student', {recursive: true});\"",
    "start": "npm run build && node app.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "precommit": "npm run lint",
    "prepare": "husky install",
    "format": "prettier --plugin=prettier-plugin-ejs --write \"**/*.{js,html,ejs,ts,json,css}\"",
    "test": "jest",
    "fullDevStart": "npm install && npm run prepare && npm run clean && npm run format && npm run lint:fix && npm run start",
    "installHusky": "npm install && npm run prepare && npx husky add .husky/pre-commit \"npm run lint\" && npx husky add .husky/pre-commit \"npm run test\""
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  }
}
