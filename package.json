{
  "dependencies": {
    "bootstrap": "^5.3.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.7.1",
    "morgan": "^1.10.0",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "clean": "rimraf ./client/build",
    "build": "npm run clean && npm run build:intern && npm run build:student && npm run copyIntern && npm run copyStudent",
    "build:intern": "cd client/intern && npm install && npm run build",
    "build:student": "cd client/student && npm install && npm run build",
    "copyIntern": "node -e \"require('fs').cpSync('./client/intern/dist', './client/build/intern', {recursive: true});\"",
    "copyStudent": "node -e \"require('fs').cpSync('./client/student/dist', './client/build/student', {recursive: true});\"",
    "start": "npm run build && node app.js"
  }
}
